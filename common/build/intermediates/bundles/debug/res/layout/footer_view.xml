<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/footer_progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/footer_button"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/footer_button"
        style="@style/drop_down_list_footer_font_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/footer_button_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/footer_button_margin_left"
        android:gravity="center"
        android:text="@string/footer_default_text" />

</RelativeLayout>