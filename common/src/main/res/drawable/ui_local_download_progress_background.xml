<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners  android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />

            <gradient
                android:angle="270"
                android:centerColor="#dcdcdc"
                android:centerY="0.75"
                android:endColor="#dcdcdc"
                android:startColor="#dcdcdc" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#76ce80"
                    android:centerY="0.75"
                    android:endColor="#76ce80"
                    android:startColor="#76ce80" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#76ce80"
                    android:centerY="0.75"
                    android:endColor="#76ce80"
                    android:startColor="#76ce80" />
            </shape>
        </clip>
    </item>

</layer-list>