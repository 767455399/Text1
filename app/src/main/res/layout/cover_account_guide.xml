<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/account_fragme"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/account_hx_img"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/trguide6" />
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/trguide7"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/account_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/guide_account_more" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/guide_account_introduce" />

        <ImageView
            android:id="@+id/account_c"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/guide_trc_home_3" />

    </LinearLayout>

</FrameLayout>