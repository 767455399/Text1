<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape = "rectangle">
    <!--shape:定义图形的形状（rectangle/矩形，oval/椭圆，line/线形，ring/环形）-->

    <!-- 大小 宽度和高度 -->
    <size
        android:width="50dp"
        android:height="50dp"/>

    <!-- 间隔 (注：是以所实现他的控件为对象)-->
    <padding
        android:top="20dp"
        android:left="20dp"/>

    <gradient
        android:startColor="@color/red"
        android:centerColor="@color/white"
        android:endColor="@color/blue"
        android:angle="45"
        android:type="sweep"
        android:centerX="90"
        android:centerY="90"
        android:gradientRadius="90"
        />

   <!--solid:填充的颜色-->
    <solid android:color="@color/red" />

    <!--stroke:定义图形的描边及其描边的颜色和大小-->
    <!--width:线的宽度-->
    <!--dashWidth:虚线的长度-->
    <!--dashGap:虚线间隔长度-->
    <stroke
        android:width="1dp"
        android:color="@color/black"
        android:dashWidth="11dp"
        android:dashGap="5dp"/>

    <!--corners:定义图形的圆角及其圆角大小-->
    <corners android:radius="10dp" />
</shape>